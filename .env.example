# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Resend Email Service
RESEND_API_KEY=re_xxx

# Anthropic (AI Analytics Chat)
ANTHROPIC_API_KEY=sk-ant-xxx

# Calendly (webhook configuration)
# Webhook URL: https://yourdomain.com/api/calendly/webhook
# Event types: invitee.created, invitee.canceled
CALENDLY_ACCESS_TOKEN=xxx
CALENDLY_WEBHOOK_SECRET=xxx

# Database: when set, app uses Postgres (e.g. Neon); otherwise SQLite (data/outerfields.db)
# On Replit: set DATABASE_URL in Secrets to your Neon (or other) Postgres URL.
# DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# Session secret (for cookie signing)
# SESSION_SECRET=xxx

# Video admin allowlist (comma-separated emails)
# Used for /admin/* and /api/v1/admin/* plus upload endpoints.
VIDEO_ADMIN_EMAILS=admin@outerfields.com
# Back-compat alias (used only if VIDEO_ADMIN_EMAILS is unset)
# VIDEO_SERIES_ADMIN_EMAILS=admin@outerfields.com

# Cloudflare Stream (required for direct uploads + signed playback)
# CLOUDFLARE_ACCOUNT_ID=xxx
# CLOUDFLARE_STREAM_API_TOKEN=xxx
# CLOUDFLARE_STREAM_CUSTOMER_CODE=xxx
# Stream webhook signing secret (from Stream webhook UI)
# CLOUDFLARE_STREAM_WEBHOOK_SECRET=xxx
# Optional: comma-separated allowed origins for Stream embeds / playback
# CLOUDFLARE_STREAM_ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:5173
# Optional: signed playback token TTL seconds (default 900)
# VIDEO_STREAM_TOKEN_TTL_SECONDS=900

# Optional: Bearer token for /api/v1/uploads/generated
# VIDEO_INGEST_API_TOKEN=xxx

# Video CDN (Cloudflare R2 or custom domain)
# Set to your bucket's public URL so video assets load (e.g. https://pub-xxxx.r2.dev)
# PUBLIC_VIDEO_CDN_BASE=https://pub-xxxx.r2.dev
